<!DOCTYPE html>
<html>
<head>
  <title>AwwNuts</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <%= link_to "AwwNuts", root_path, class: "navbar-brand" %>
    <ul class="nav navbar-nav navbar-right">
    <% if logged_in? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
          <%= image_tag current_user.avatar_url, size: "30" %>
          <%= current_user.full_name %>
          <span class="caret"></span>
        </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Dashboard", dashboard_path %></li>
              <li><%= link_to "Ask a Question", new_question_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
      </li>
    <% else %>
      <li><%= link_to "Login", login_path %></li>
    </ul>
    <p class="navbar-btn navbar-right"><%= link_to "Signup", new_user_path, class: "btn btn-primary" %></p>
    <% end %>
</nav>
<%= yield %>

</body>
</html>
