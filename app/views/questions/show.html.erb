<div class="container">
  <div class="question">
    <h1 class="question-heading col-md-offset-1"><%= @question.title.humanize %></h1>
    <div class="row">
      <div class="stats-vertical col-md-1">
        <div class="stat col-md-12">
          <span class="number"><%= @question.answers.count %></span>answers
        </div>
        <div class="stat col-md-12">
          <span class="number"><%= @question.comments.count %></span>comments
        </div>
        <div class="stat col-md-12">
          <span class="number"><%= @question.vote_count %></span>votes
          <div class="row">
            <%= link_to "⇡", question_upvote_path(@question), method: :post, class: "btn-xs btn-success" %>
            <%= link_to "⇣", question_downvote_path(@question), method: :post, class: "btn-xs btn-danger" %>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="question-content">
          <%= @question.content %>
        </div>
      </div>
    </div>
  </div>
  <% if @question.answers %>
    <%= render partial: "/answers/show", locals: { question: @question } %>
  <% end %>
</div>
