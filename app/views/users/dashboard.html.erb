<div class="container">
	<div id="dash-header">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="page-header"><%= current_user.first_name.capitalize%></h1>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<img src=<%= current_user.avatar_url %> class="img-thumbnail" width="304" height="236">
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<table class="center">
					<tbody>
						<tr>
							<td> <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %> </td>
						</tr>
						<tr>
							<td>Member for: <%= member_for %> </td>
						</tr>
						<tr>
							<td>Email: <%= current_user.email %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		 <!-- /.col-lg-8 -->
		 <div class="col-lg-4">
		 	<div class="panel panel-default">
		 		<div class="panel-heading">
		 			<i class="fa fa-bell fa-fw"></i> Notifications Panel
		 		</div>
		 		<div class="panel-body">
		 			<div class="list-group">
		 				<% @question = current_user.questions.order("questions.created_at desc limit(5)") %>
		 				<% @question.each do |question| %>
		 				<a href="<%= question_path(question.id) %>" class="list-group-item">
		 					<i class="fa fa-comment fa-fw"></i> New Question Posted
		 					<span class="pull-right text-muted small"><em><%= question_activity(question.id) %> </em>
		 					</span>
		 				</a>
		 				<% end %>
		 			</div>
		 		</div>
		 	</div>
		 </div>
	<div id="page-wrapper">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Dashboard</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3 col-md-6">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-3">
								<i class="fa fa-comments fa-5x"></i>
							</div>
							<div class="col-xs-9 text-right">
								<div class="huge"><%= current_user.questions.count %></div>
								<div>Questions</div>
							</div>
						</div>
					</div>
					<a href="#">
						<div class="panel-footer">
							<span class="pull-left">View Details</span>
							<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
							<div class="clearfix"></div>
						</div>
					</a>
				</div>
			</div>
			<div class="col-lg-3 col-md-6">
				<div class="panel panel-green">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-3">
								<i class="fa fa-tasks fa-5x"></i>
							</div>
							<div class="col-xs-9 text-right">
								<div class="huge"><%= current_user.answers.count %></div>
								<div>Answers</div>
							</div>
						</div>
					</div>
					<a href="#">
						<div class="panel-footer">
							<span class="pull-left">View Details</span>
							<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
							<div class="clearfix"></div>
						</div>
					</a>
				</div>
			</div>

			<div class="col-lg-3 col-md-6">
				<div class="panel panel-red">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-3">
								<i class="fa fa-support fa-5x"></i>
							</div>
							<div class="col-xs-9 text-right">
								<!-- NEED VOTES ASSOCIATION TO WORK -->
								<div class="huge">0</div>
								<div>Votes Received</div>
							</div>
						</div>
					</div>
					<a href="#">
						<div class="panel-footer">
							<span class="pull-left">View Details</span>
							<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
							<div class="clearfix"></div>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-3 col-md-6">
		<div class="panel panel-green">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-3">
						<i class="fa fa-tasks fa-5x"></i>
					</div>
					<div class="col-xs-9 text-right">
						<div class="huge"><%= current_user.cast_votes.count %></div>
						<div>Votes Cast</div>
					</div>
				</div>
			</div>
			<a href="#">
				<div class="panel-footer">
					<span class="pull-left">View Details</span>
					<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
					<div class="clearfix"></div>
				</div>
			</a>
		</div>
	</div>
</div>

   